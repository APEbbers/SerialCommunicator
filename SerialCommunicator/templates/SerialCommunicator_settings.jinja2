<form class="form-horizontal">
    <div id="controlGroup1" class="control-group">
        <label class="">Serial Port</label>
        <select id="connection_ports_SC" class="select-mini" data-bind="value: settings.plugins.SerialCommunicator.selectedPort">
            <option value="/dev/ttyUSB0">/dev/ttyUSB0</option>
            <option value="/dev/ttyUSB1">/dev/ttyUSB1</option>
            <option value="/dev/ttyUSB2">/dev/ttyUSB2</option>
            <option value="/dev/ttyUSB3">/dev/ttyUSB3</option>
            <option value=""></option>
        </select>
        <label class="">Baudrate</label>
        <select id="connection_baudrates_SC" class="select-mini" data-bind="value: settings.plugins.SerialCommunicator.selectedBaudrate">
            <option value="250000">250000</option>
            <option value="230400">230400</option>
            <option value="115200">115200</option>
            <option value="57600">57600</option>
            <option value="38400">38400</option>
            <option value="19200">19200</option>
            <option value="9600">9600</option>
            <option value=""></option>
        </select>
        <div class="control-group">
            <label class="">Command1</label>
            <input id="Command1" type="text" class="input-mini text-left" data-bind="value: settings.plugins.SerialCommunicator.Command1">
        </div>
        <label class="">Serial Port (For testing)</label>
        {# <select id="selectedPort2" class="select-mini" data-bind="Options: {{  plugin_SerialCommunicator_selectedPort2  }}, value: settings.plugins.SerialCommunicator.selectedPort2"></select>       #}
        <select id="selectedPort2" data-bind="value: settings.plugins.SerialCommunicator.selectedPort2">
            {% for x in plugin_SerialCommunicator_selectedPort2 %}
                <option value="{{x}}">{{x}}</option>
            {% endfor %}
        </select>
    </div>
</form>
